<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:ndroid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".mvp.app.screen.ProductScreen.ProductFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rudiosblack"
        >

        <TextView


            android:id="@+id/Name"

            android:layout_marginVertical="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Lavka"

            android:textColor="@color/purple_200"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_bar"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="0dp"

            android:background="@drawable/blackk"


            android:fontFamily="@font/roboto"

            android:paddingVertical="1dp"
            android:paddingLeft="30dp"
            android:textSize="18dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ImageViewTypeRecycler"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:paddingVertical="5dp"

            />
    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_marginVertical="70dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView


        android:id="@+id/ProductCartRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>